<div class=container>
  <div class="row">
    <div class="mx-auto col-lg-6 col-md-8 col mt-3">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form d-block">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'w-100 mb-3'%>
        </div>
        <div class="form d-block">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, class: 'd-block mb-3' %>
        </div>
        <div class="form d-block">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputIntroduction", class: 'w-100 mb-3'%>
        </div>
        
        <%= f.submit "Update User", class: 'text-white btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>


