<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/left', book: @book_new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, size: "80x80", fallback: "no_image.jpeg" %>
                <p><%= @user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: 'text-white btn btn-sm bg-success' %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class: 'text-white btn btn-sm bg-danger' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>






