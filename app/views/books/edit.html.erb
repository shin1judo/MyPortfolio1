  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto col-lg-6 mt-3">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", class: 'd-block w-100 mb-3' %>
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, id:"inputBody", class: 'd-block w-100' %>
        <%= f.submit "Update Book", class: 'text-white btn btn-success my-3' %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>


